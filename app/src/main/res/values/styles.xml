<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="about_topic">
        <item name="android:gravity">center</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="about_content">
        <item name="android:gravity">center</item>
    </style>

    <style name="about_button">
        <item name="android:layout_marginEnd">50sp</item>
        <item name="android:layout_marginStart">50sp</item>
        <item name="android:layout_marginTop">20sp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="sub_button">
        <item name="android:layout_width">30sp</item>
        <item name="android:layout_height">30sp</item>
        <item name="android:layout_marginStart">10sp</item>
        <item name="android:layout_marginEnd">5sp</item>
        <item name="android:background">@drawable/add_sub_button</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:text">@string/minus</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="add_button">
        <item name="android:layout_width">30sp</item>
        <item name="android:layout_height">30sp</item>
        <item name="android:layout_marginEnd">3sp</item>
        <item name="android:background">@drawable/add_sub_button</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:text">@string/plus</item>
        <item name="android:textSize">20sp</item>
    </style>

</resources>